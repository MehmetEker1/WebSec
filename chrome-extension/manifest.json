{
    "manifest_version": 3,
    "name": "WebSec - Zararlı İçerik Analizi",
    "description": "Ziyaret edilen sitelerin güvenliğini kontrol eder",
    "version": "1.0",
    "host_permissions": [
        "https://localhost:5005/*"
    ],
    "permissions": [
        "scripting",
        "activeTab"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}